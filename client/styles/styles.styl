@import '_buttons'

html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  font-family Helvetica, Arial, Verdana, sans-serif
  font-size 16px
  color #000
  background #e7e7e7

h1
h2
  margin 0
  padding 0

*
  box-sizing border-box
  user-select none

a
  text-decoration none

.user-name
  display inline-block
  vertical-align middle
  border-bottom 1px solid #e7e7e7
  width 100%
  padding-bottom 10px


.col
.col-10
.col-20
.col-25
.col-30
.col-33
.col-40
.col-50
.col-60
.col-70
.col-75
.col-80
.col-90
  display inline-block
  width 100%
  vertical-align top
  white-space normal

.col-10
  width 10%
.col-20
  width 20%
.col-25
  width 25%
.col-30
  width 30%
.col-33
  width 33%
.col-40
  width 40%
.col-50
  width 50%
.col-60
  width 60%
.col-70
  width 70%
.col-75
  width 75%
.col-80
  width 80%
.col-90
  width 90%

input[type="text"]
  -webkit-appearance none
  padding 10px 10px
  font-size 16px
  margin 0
  border 1px solid #ccc
  &:focus
    outline none

.red
  color #ef3434
  text-shadow 0px 1px 0px #c12222
.green
  color #A6CF57
  text-shadow 0px 1px 0px #799b36

.relative
  position relative

.block
  display block

.divider-horizontal
  width 100%
  border-bottom 1px solid #e7e7e7
  margin 15px 0

.margin-top-15
  margin-top 15px

.right
  right 0
  position absolute

.container
  width 100%
  height 100%
  position relative
  padding-top 55px

.page-container
  position relative
  width 100%
  height 100%
  &.show-page-2
    .page-1
      left -100%
    .page-2
      left 0
  &.show-page-3
    .page-1
      top 100%
    .page-3
      top 0
    & + .bottom-nav
      bottom -100%
  .page
    position absolute
    left 0
    top 0
    overflow hidden
    display block
    width 100%
    height 100%
    transition all 500ms ease-in-out
  .page-2
    left 100%
    background #b0d369
  .page-3
    top -100%

.header
  background #525252
  width 100%
  height 55px
  color #fff
  position fixed
  top 0
  z-index 1000
  .header-user
    background #323232
    width 20%
    height 100%
    position absolute
    right 0
    display inline-block
    z-index 100
    .user-image
      position absolute
      border-radius 0
      height 100%
      border 0
      margin 0
    .user-name
      display inline-block
      border 0
      height 100%
      padding-left 65px
    .user-name-realname
      font-weight 100
      color #c7c7c7
    .user-name-content
      display inline-block
      position relative
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      width 100%
      padding-right 15px
      top 100%
      transform translateY(-100%)

  .header-logout
    display inline-block
    position absolute
    right 0
    height 100%

.login
  background #fff
  margin 75px auto 0
  width 350px
  display block
  text-align center
  a
    width 100%
    height 100%
    padding 25px 0px
    display block
    color #525252

.weiner-center
  input
    display inline-block
    padding 15px
    width 80%
    border 0
    font-size 1.75em
    border-bottom 2px solid #f0f0f0
  .btn-weiner
    width 20%
    display inline-block
    padding-top 10px
    padding-bottom 10px
    margin-bottom 2px
  .user-image
    width 180px
    border-radius 0
    height 180px

.user-image
  width 48px
  height 48px
  display inline-block
  vertical-align middle
  overflow hidden
  position relative
  img
    width 100%
    max-height 100%

.weiner
  background #fff
  width 100%
  height 100%

.weiner-text
  font-style italic
  font-weight 100

.weiner-center
  background #fff

.weiner-left
.weiner-right
  display inline-block
  height 100%
  background #f7f7f7
  overflow-y auto
  overflow-x hidden

.weiner-right
  padding 10px
  padding-bottom 65px
  &:after
    display block
    content ''
    width 100%
    height 75px


.checkbox
  width 25px
  height 25px
  cursor pointer
  z-index 100
  opacity 0
  position absolute

.custom-checkbox
  width 25px
  height 25px
  display inline-block
  border 1px solid #ccc
  position absolute
  &.checked
    &::after
      display block
      position absolute
      content ''
      background #A6CF57
      width 15px
      height 15px
      top 4px
      left 4px

.user-list
  height 100%
  width 100%
  position relative
  .list-item
    color #727272
    padding 15px
    cursor pointer
    position relative
    &.odd
      background #e7e7e7
    &.added
      pointer-events none
      background #c7c7c7
    &:hover
      background #d7d7d7
  .list-item-icon
    text-align right
  .list-item-name
    white-space nowrap
    padding-right 15px
    padding-left 48px
    overflow hidden
    text-overflow ellipsis
  .list-item-image
    position absolute
    top 0
    left 0

.user-weiners
  .weiner
    padding 15px
    margin-bottom 10px

.to-be-weinered
  padding 15px
  h2
    color #727272
    margin-bottom 15px

.user-search
  position absolute
  bottom 55px
  border 1px solid #e7e7e7 !important

.menu-icon
  cursor pointer
  text-align center
  position relative
  height 100%
  i
    position relative
    top 50%
    transform translateY(-50%)
  &:hover
  &.toggle-menu
    background #424242

.menu
  display block
  background #424242
  position absolute
  z-index 99
  right 0
  transition all 300ms ease-in-out
  top -180px
  &.toggle-menu
    top 55px
  a
    color #fff
    width 100%
    padding 25px
    i
      margin-right 15px
    &:hover
      background #525252