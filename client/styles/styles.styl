@import '_buttons'

html, body
  margin 0
  padding 0
  width 100%
  overflow hidden
  height 100%

body
  font-family Helvetica, Arial, Verdana, sans-serif
  font-size 16px
  color #000
  background #e7e7e7

h1
h2
  margin 0
  padding 0

*
  box-sizing border-box
  user-select none

a
  text-decoration none

.col
.col-10
.col-20
.col-25
.col-30
.col-33
.col-40
.col-50
.col-60
.col-70
.col-75
.col-80
.col-90
  display inline-block
  width 100%
  vertical-align top
  white-space normal

.col-10
  width 10%
.col-20
  width 20%
.col-25
  width 25%
.col-30
  width 30%
.col-33
  width 33%
.col-40
  width 40%
.col-50
  width 50%
.col-60
  width 60%
.col-70
  width 70%
.col-75
  width 75%
.col-80
  width 80%
.col-90
  width 90%

input[type="text"]
  -webkit-appearance none
  padding 10px 10px
  font-size 16px
  margin 0
  border 1px solid #ccc
  &:focus
    outline none
    border 1px solid #adadad
    &::-webkit-input-placeholder
        color transparent !important
    &::-moz-input-placeholder
        color transparent !important
    &::-ms-input-placeholder
        color transparent !important
    &::input-placeholder
        color transparent !important

.red
  color #ef3434
  text-shadow 0px 1px 0px #c12222
.green
  color #A6CF57
  text-shadow 0px 1px 0px #799b36

.relative
  position relative

.block
  display block

.divider-horizontal
  width 100%
  border-bottom 1px dashed #ccc
  margin 15px 0

.margin-top-15
  margin-top 15px

.right
  right 0
  position absolute

.container
  width 100%
  height 100%
  position relative

.page-container
  position relative
  width 100%
  height 100%
  &.show-page-2
    .page-1
      left -100%
    .page-2
      left 0
  &.show-page-3
    .page-1
      top 100%
    .page-3
      top 0
    & + .bottom-nav
      bottom -100%
  .page
    position absolute
    left 0
    top 0
    overflow hidden
    display block
    width 100%
    height 100%
    transition all 500ms ease-in-out
  .page-2
    left 100%
    background #b0d369
  .page-3
    top -100%

.header
  background #525252
  width 100%
  height 55px
  color #fff
  position relative
  .header-user
    background #323232
    width 250px
    height 100%
    display inline-block
    .user-name
      display inline-block
      vertical-align middle
      border 0
      width auto
      margin-left 25px
      margin-top 10px
  .header-logout
    display inline-block
    position absolute
    right 0
    height 100%

.login
  background #fff
  margin 75px auto 0
  width 350px
  display block
  text-align center
  a
    width 100%
    height 100%
    padding 25px 0px
    display block
    color #525252

.user
  display inline-block
  padding 15px
  width 375px
  height 100%
  border-top 3px solid #3ba2dd
  background #fff
  input
    width 80%
  .btn-weiner
    width 20%
    display inline-block
    padding-top 10px
    padding-bottom 10px
    margin-bottom 2px

.user-image
  width 48px
  height 48px
  display inline-block
  vertical-align middle
  border-radius 100%
  overflow hidden
  border 1px solid #e7e7e7
  position relative
  margin-top 2px
  img
    width 100%
    max-height 100%

.user-name
  display inline-block
  vertical-align middle
  border-bottom 1px solid #e7e7e7
  width 100%
  padding-bottom 10px

.weiner
  background #fff
  width 100%
  height 100%


.weiner-text
  font-style italic
  font-weight 100

.weiner-left
  display inline-block
  height 100%
  border-right 1px solid #ccc

.weiner-right
  right 0
  top 55px
  display inline-block
  height 100%
  border-left 1px solid #ccc
    

.checkbox
  width 25px
  height 25px
  cursor pointer
  z-index 100
  opacity 0
  position absolute

.custom-checkbox
  width 25px
  height 25px
  display inline-block
  border 1px solid #ccc
  position absolute
  &.checked
    &::after
      display block
      position absolute
      content ''
      background #A6CF57
      width 15px
      height 15px
      top 4px
      left 4px