.login
  width: 325px
  margin: 0 auto
  text-align: center
  position: absolute
  left: 0
  right: 0
  top: 37.5%
  transform: translateY(-50%)

.login-logo
  width: 325px
  height: 325px
  background: url('/img/weiner-machine-logo.svg') no-repeat center center
  background-size: contain
  margin-left: -25px
  margin-bottom: 35px

  &::after
    display: block
    content: ''
    position: absolute
    top: -200px
    left: -234px
    width: 800px
    height: 800px
    border-radius: 50%
    background: radial-gradient(ellipse, rgba(255, 255, 255, 0.652) 0%, rgba(255, 255, 255, 0) 62.5%)
    z-index: -1

.btn-login
  background: #307a78
  border-radius: 30px
  color: #fff
  width: 75%
  border: 1px solid #215653
  box-shadow: 0 3px 0 #215653
  font-size: 18px
