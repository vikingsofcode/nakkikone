html,
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  overflow: hidden

p
  margin: 0

a
  text-decoration: none

body
  background: #e2e2e2
  font-family: Helvetica, Arial, Verdana, sans-serif

*
  box-sizing: border-box

.navbar,
#app
  width: 75%
  margin: 0 auto
  position: relative

.navbar
  background: #f5f5f5
  height: 55px
  border-radius: 5px 5px 0 0
  margin-top: 35px

.navbar-logo
  display: inline-block
  width: 125px
  height: 100%
  vertical-align: top
  background: url('/img/weiner-machine-logo.svg') #f9f9f9 no-repeat center center
  background-size: 45px
  border-radius: 5px 0 0 0

.navbar-nav
  display: inline-block
  vertical-align: top
  width: calc(100% - 125px)
  height: 100%

  a
    display: inline-block
    color: #333
    height: 100%
    line-height: 55px
    padding: 0 25px

#app
  background: #eee
  height: 750px

.weiner-app
  height: 100%

.user-list
  position: relative
  width: 300px
  padding: 15px
  overflow-x: hidden
  overflow-y: auto
  height: 100%
  background: #ccc

.user-block
  background: #fff
  margin: 0 0 5px
  height: 50px
  cursor: pointer

  &:hover
    background: #f3f3f3

.user-block-image
  width: 50px
  height: 50px
  background-position: center center
  background-size: cover
  display: inline-block
  vertical-align: middle
  margin-right: 15px

.user-block-content
  display: inline-block
  vertical-align: middle
  width: calc(100% - 115px)

.right-col
  position: absolute
  right: 0
  top: 0
